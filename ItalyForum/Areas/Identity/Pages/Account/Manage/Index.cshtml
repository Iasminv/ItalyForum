@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<!-- Manage Account -->
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Input name -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="Enter your name" />
                <label asp-for="Input.Name" class="form-label"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <!-- Input location -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Location" class="form-control" placeholder="Enter your location" />
                <label asp-for="Input.Location" class="form-label"></label>
                <span asp-validation-for="Input.Location" class="text-danger"></span>
            </div>

            <!-- Upload image or placeholder -->
            <div class="mb-3 text-center">
                <label asp-for="Input.ImageFile" class="form-label">Profile Image</label>
                <div>
                    <img src="~/images/@(string.IsNullOrEmpty(Model.Input.ImageFilename) ? "placeholder.png" : Model.Input.ImageFilename)"
                         class="rounded-circle img-fluid user-profile-image mt-3 mb-3" />
                </div>
                <input type="file" asp-for="Input.ImageFile" class="form-control" />
                <span asp-validation-for="Input.ImageFile" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-success">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
